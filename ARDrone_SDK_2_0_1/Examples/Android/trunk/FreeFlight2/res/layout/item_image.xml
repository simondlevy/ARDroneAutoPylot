<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_holder"
    android:layout_width="match_parent"
    android:layout_height="@dimen/media_screen_thumb_size" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_screen_thumb_size"
		android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/media_screen_thumb_padding"
        android:layout_marginTop="@dimen/media_screen_thumb_padding"
        android:background="@null"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="center"
        android:scrollY="-3dp"
        android:src="@drawable/ff2_media_watch"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/selected_holder"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/media_screen_thumb_size"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ff2_updater_ok" />
    </LinearLayout>

</RelativeLayout>