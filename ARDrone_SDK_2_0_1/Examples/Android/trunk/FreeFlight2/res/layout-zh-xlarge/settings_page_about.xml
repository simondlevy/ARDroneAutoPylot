        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_height="wrap_content" android:minWidth="200dp" android:layout_width="wrap_content">

            <TextView
                android:id="@+id/TextView11"
                android:layout_width="wrap_content"
