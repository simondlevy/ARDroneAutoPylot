        android:layout_alignParentTop="true"
        android:text="@string/app_version" android:layout_centerHorizontal="true" android:layout_marginLeft="32dp" android:gravity="left|center_vertical"/>
   
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
