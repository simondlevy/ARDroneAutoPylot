                android:layout_alignBaseline="@+id/TextView12"
                android:layout_alignBottom="@+id/TextView12"
                android:layout_alignLeft="@+id/textMotor2Hardware"
                android:text="0" />
        </RelativeLayout>

        <View
            android:id="@+id/View01"
            android:layout_width="2dp"
            android:layout_height="118dp"
            android:background="#FFBBBBBB" android:layout_marginTop="4dip" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"/>

        <RelativeLayout
            android:id="@+id/RelativeLayout03"
            android:layout_height="wrap_content" android:minWidth="200dp" android:layout_width="wrap_content">

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/motor_3"
                android:textColor="@color/accent" android:gravity="center" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/TextView10"
                style="@style/SettingsTextView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="38dp"
                android:text="@string/type"
