        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_height="wrap_content" android:minWidth="200dp" android:layout_width="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/motor_4"
                android:textColor="@color/accent" android:gravity="center" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/textView9"
                style="@style/SettingsTextView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="38dp"
