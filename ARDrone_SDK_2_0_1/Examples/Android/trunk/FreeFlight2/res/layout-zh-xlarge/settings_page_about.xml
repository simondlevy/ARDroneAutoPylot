        android:textAllCaps="false" android:gravity="left|center_vertical" android:layout_toLeftOf="@+id/textDroneHardwareVersion" android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/textView6"
        android:text="@string/hardware"
        android:textAllCaps="false" android:gravity="left|center_vertical" android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/textDroneHardwareVersion"
        style="@style/SettingsTextView.Value"
