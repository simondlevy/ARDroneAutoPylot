        android:textAllCaps="false" android:gravity="left|center_vertical"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="@string/software"
        android:textAllCaps="false" android:layout_marginLeft="100dip" android:gravity="left|center_vertical"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:src="@drawable/horizontal_bar" android:layout_centerInParent="true" android:layout_alignBaseline="@id/textView2" android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:src="@drawable/horizontal_bar" android:layout_centerInParent="true" android:layout_alignBaseline="@id/textView6" android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:src="@drawable/horizontal_bar" android:layout_centerInParent="true" android:layout_alignBaseline="@id/textView7" android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:src="@drawable/horizontal_bar" android:layout_centerInParent="true" android:layout_marginTop="-6dip" android:layout_alignBaseline="@id/labelMotorsVersion" android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textInertialSoftwareVersion"
        style="@style/SettingsTextView.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView3"
        android:text="0" android:layout_marginLeft="13dp" android:gravity="left|center_vertical" android:layout_alignBaseline="@id/textInertialHardware"/>

