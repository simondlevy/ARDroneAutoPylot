<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Transparent" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="titleTextOrangeBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/orange_bar_title_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PhotoVideoButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/transparent_full</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/photo_video_bar_text_size</item>
    </style>

    <style name="PhotoVideoGreyButton" parent="PhotoVideoButton">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="PhotoVideoActionButton" parent="PhotoVideoButton">
        <item name="android:textColor">@color/action_bar_selector</item>
        <item name="android:background">@drawable/black</item>
    </style>

    <style name="PhotoVideoText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/photo_video_bar_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="labelSplashScreen">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dip</item>
    </style>

    <style name="emergencyText">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="updaterText">
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="updaterText.bigger">
        <item name="android:textSize">17dip</item>
    </style>

    <style name="batteryIndicatorText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="recordButtonText" parent="batteryIndicatorText">
        <item name="android:textSize">14dip</item>
    </style>

    <style name="LabelSettings">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="LabelSettings.smaller">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="LabelSettings.Value">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="LabelSettings.Value.Seek">
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="LabelSettings.SeekBarEdgeValues">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="toppanel">
        <item name="android:textColor">#ffff7800</item>
        <item name="android:textSize">@dimen/top_panel_text_size</item>
    </style>

    <style name="toppanel.text">
        <item name="android:padding">1dp</item>
    </style>

    <style name="toppanel.button">
        <item name="android:textColor">@color/top_bar_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SettingsDialog" parent="Theme.Transparent">
        <item name="android:alwaysDrawnWithCache">true</item>
    </style>

    <style name="TopBarButton" parent="@android:style/Widget.DeviceDefault.ImageButton"></style>

    <style name="TopBarButton.Dark">
        <item name="android:background">@color/panel_dark_button_bg</item>
    </style>

    <style name="TopBarButton.Dark.Back">
        <item name="android:src">@drawable/btn_back_arrow</item>
    </style>

    <style name="TopBarTitleBase" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/top_bar_title</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TopBarTitle" parent="TopBarTitleBase">
        <item name="android:textSize">@dimen/settings_header_text_size</item>
    </style>

    <style name="BottomBarButton" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:background">@drawable/bottom_button_bar_bg</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">4dip</item>
        <item name="android:textSize">@dimen/settings_statusbar_button_text_size</item>
    </style>

    <style name="SettingsNavigationButton" parent="@android:style/Widget.DeviceDefault.ImageButton">
     <!--    <item name="android:background">@color/transparent_full</item> -->
     	<item name="android:background">@null</item>
    </style>

    <style name="SettingsNavigationButton.Prev">
        <item name="android:src">@drawable/arrow_left_orange</item>
    </style>

    <style name="SettingsNavigationButton.Next">
        <item name="android:src">@drawable/arrow_right_orange</item>
    </style>

    <style name="SettingsCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:background">@drawable/checkbox_bg</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SettingsButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_color</item>
        <item name="android:paddingTop">@dimen/settings_calibration_btn_vert_padding</item>
        <item name="android:paddingBottom">@dimen/settings_calibration_btn_vert_padding</item>
        <item name="android:paddingLeft">@dimen/settings_calibration_btn_padding</item>
        <item name="android:paddingRight">@dimen/settings_calibration_btn_padding</item>
        <item name="android:textColor">@drawable/settings_button</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SettingsEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_field</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <style name="SettingsSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seek_bar</item>
        <item name="android:thumb">@drawable/scroll_btn</item>
        <item name="android:thumbOffset">2dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:minHeight">@dimen/theme_seekbar_progress_height</item>
        <item name="android:maxHeight">@dimen/theme_seekbar_progress_height</item>
        <item name="textPaddingTop">6dp</item>
        <item name="android:textSize">10dip</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsTextView" parent="TextView">
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SettingsTextView.Value">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsTextView.Small">
        <item name="android:textSize">@dimen/settings_text_small_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FirmwareUpdateText">
        <item name="android:textColor">@color/firmware_update_text_color</item>
    </style>

    <style name="HudPopupText">
        <item name="android:textColor">@color/hud_popup_text_color</item>
        <item name="android:textSize">@dimen/hud_popup_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RemoteScreenText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="MediaGallery.FilterButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@null</item>
    </style>
    
    <style name="MediaGallery.FilterPhotoVideo" parent="MediaGallery.FilterButton">
        <item name="android:button">@drawable/rbtn_photo_video</item>
        <item name="android:width">@dimen/media_screen_filter_photo_video_width</item>
    </style>
    
    <style name="MediaGallery.FilterPhoto" parent="MediaGallery.FilterButton">
        <item name="android:button">@drawable/rbtn_photo</item>
       <item name="android:width">@dimen/media_screen_filter_photo_width</item>
    </style>
    
    <style name="MediaGallery.FilterVideo" parent="MediaGallery.FilterButton">
        <item name="android:button">@drawable/rbtn_video</item>
        <item name="android:width">@dimen/media_screen_filter_photo_width</item>
    </style>

</resources>