<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <!-- selected state -->
    <item android:drawable="@drawable/ff2_arrow_left_pressed" android:state_focused="true" android:state_pressed="true" />
    <item android:drawable="@drawable/ff2_arrow_left_pressed" android:state_focused="false" android:state_pressed="true"/>

    <!-- disabled state -->
    <item android:drawable="@drawable/ff2_arrow_left_pressed" android:state_enabled="false" />
    <item android:drawable="@drawable/ff2_arrow_left_normal" android:state_enabled="true" />
    
    <!-- normal state -->
    <item android:drawable="@drawable/ff2_arrow_left_normal"/>
</selector>