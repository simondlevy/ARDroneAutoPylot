<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/guest5"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/InfosTextLarge"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="416dp"
        android:gravity="center_vertical"
        android:text="@string/Share" />

    <TextView
        android:id="@+id/textView3"
        style="@style/InfosTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="@string/with_the_pilot_community"
        android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginTop="-6dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ff2_guest_space_orange_bar" android:layout_marginTop="9dp" android:layout_below="@+id/textView3"/>

    <TextView
        android:id="@+id/textView1"
        style="@style/InfosTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/imageView2"
        android:text="@string/guest_share_description" android:textSize="25sp" android:layout_marginTop="8dp"/>

</RelativeLayout>