<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/guest6" />

    <TextView
        android:id="@+id/textView3"
        style="@style/InfosTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/Augmented_Reality"
        android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginLeft="56dp"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/InfosTextLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="@string/Video_Games" android:layout_marginTop="-5dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:adjustViewBounds="true"
        android:paddingBottom="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/ff2_guest_space_orange_bar" />

    <TextView
        android:id="@+id/textView1"
        style="@style/InfosTextDescription"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:text="@string/guest_video_games_description" android:gravity="center_vertical"/>

</RelativeLayout>